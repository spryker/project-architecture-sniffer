<?xml version="1.0"?>
<ruleset name="Spryker Project Service"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0 http://pmd.sf.net/ruleset_xml_schema.xsd"
         xsi:noNamespaceSchemaLocation="http://pmd.sf.net/ruleset_xml_schema.xsd">
    <description>
        Asserting clean code architecture with Spryker project.
    </description>

    <rule
        name="ServiceRule"
        message="Service: {0}"
        class="ArchitectureSniffer\Service\ServiceRule">

        <priority>5</priority>
    </rule>

    <rule
        name="ServiceInterfaceRule"
        message="ServiceInterface: {0}"
        class="ArchitectureSniffer\Service\ServiceInterfaceRule">

        <priority>5</priority>
    </rule>

    <rule
        name="ServiceDependencyProviderMethodNameRule"
        message="DependencyProvider: {0}"
        class="ArchitectureSniffer\Service\DependencyProvider\DependencyProviderMethodNameRule">

        <priority>3</priority>
    </rule>

</ruleset>
