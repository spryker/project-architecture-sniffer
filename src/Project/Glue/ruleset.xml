<?xml version="1.0"?>
<ruleset name="Spryker Project Glue"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0
                     http://pmd.sf.net/ruleset_xml_schema.xsd"
         xsi:noNamespaceSchemaLocation="
                     http://pmd.sf.net/ruleset_xml_schema.xsd">
    <description>
        Asserting clean code architecture with Spryker project.
    </description>

    <rule
        name="GlueDependencyProviderMethodNameRule"
        message="DependencyProvider: {0}"
        class="ProjectArchitectureSniffer\Project\Glue\DependencyProviderMethodNameRule">

        <priority>3</priority>
    </rule>

</ruleset>
